{%  extends 'base.html.twig' %}

{% block title %}Mobile Boxoffice{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('images/logo100.png') }}" style="">
                </a>
            </div>

        </div>
    </nav>
    <div id="root"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://unpkg.com/react@15/dist/react.min.js"></script>
    <script src="https://unpkg.com/react-dom@15/dist/react-dom.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
    <script type="text/babel" src="{{ asset('js/main.react.js') }}"></script>
    <script>
        $("#root").click(function(){
            var par = document.createElement("p");
            par.innerHTML = '<strong>jQuery created</strong>';
            $(par).hide().appendTo("body").fadeIn("slow");
        });
    </script>
{% endblock %}